= render :partial => "userpage_header"
.profile_container
  .col-xs-2
  .col-xs-8.profile_edit_form
    - if @errors.present?
      %ul
        - @errors.each do |msg|
          %li= msg    
    .row.profile_edit_top
      %h2 Edit Contact information for: #{@current_user.username}
      .thumbnail.profile_edit
        %img{:class=>"profile_edit", :src =>'http://www.clker.com/cliparts/5/7/4/8/13099629981030824019profile.svg.thumb.png', :alt =>"profile photo"}
    .row.profile_edit_body
      =form_for current_user do |f|
        .edit_profile_form_item
          = f.label :username, :class =>'col-xs-3 edit_profile'
          = f.text_field :username, required: true, :class =>'edit_profile'
          %br/
        .edit_profile_form_item
          = f.label :listener, :class =>'col-xs-3 edit_profile'
          = f.label :listener, 'Yes', :value => true , :class =>'edit_profile'
          = f.radio_button :listener, true , :class =>'edit_profile_radio'
          = f.label :listener, 'No', :value => false , :class =>'edit_profile'
          = f.radio_button :listener, false, :class =>'edit_profile_radio'
        .edit_profile_form_item
          = f.label :language , :class =>'col-xs-3 edit_profile'
          = f.select :language, ['English', 'Spanish', 'Chinese', 'French'], selected: f.object.language, :required => true
        .edit_profile_form_item
          = f.label :agegroup , :class =>'col-xs-3 edit_profile'
          = f.select :agegroup, ['teen', 'adult'], selected: f.object.agegroup, :required => true
        .edit_profile_form_item
          = f.label :categories, :class =>'col-xs-3 edit_profile'
          = f.select :categories, ['Anxiety', 'Blah - Everyday matters','Business', 'Depression', 'Disability','Eating Disorders','Emotional support', 'Family Issues', 'Feeling Lost','Health and Wellness','LGBTQ','Life in general','Panic Attacks','Relationships','Sex','Self-Harm', 'Substance Abuse', 'Traumatic Experiences', 'Work Stress'], :required => true, selected: f.object.categories
        .edit_profile_form_item 
          = f.label :religion , :class =>'col-xs-3 edit_profile'
          = f.select :religion, ['Catholicism','Protestantism','Islam','Judaism','Hinduism','Buddhism','prefer not to answer','Spiritualism','Atheism','none'], :required => true, selected: f.object.religion
        .edit_profile_form_item  
          = f.label :license_type , :class =>'col-xs-3 edit_profile'
          = f.text_field :license_type, :class =>'edit_profile'
        .edit_profile_form_item  
          = f.label :specialty, :class =>'col-xs-3 edit_profile'
          = f.text_field :specialty, :class =>'edit_profile'
        %br/
        .edit_profile_form_item
          =f.label :description, :class =>'col-xs-3 edit_profile'
          =f.text_area :description , :class =>'edit_profile'
        %br/
        .edit_profile_form_item_bottom
          = f.submit 'Save'
      //Add autocomplete in the future 
          
    .row.profile_edit_bottom
      %h3 Cancel my account
      %p
        #{button_to "Cancel my account", destroy_user_session_path, data: { confirm: "Are you sure?" }, method: :delete}
      = link_to "Back", :back
  .col-xs-2

